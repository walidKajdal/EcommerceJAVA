<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Nom de l'application -->
    <display-name>eCommerceJAVA</display-name>

    <!-- Configuration du gestionnaire de session -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <resource-env-ref>
        <resource-env-ref-name>jdbc/ecommerce_java</resource-env-ref-name>
        <resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
    </resource-env-ref>
    <resource-ref>
    <description>DataSourceMySQL</description> <!-- Optionnel, mais sans espace dans le nom -->
    <res-ref-name>jdbc/myDataSource</res-ref-name>
    <res-auth>Container</res-auth>
</resource-ref>
</web-app>
